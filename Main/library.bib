journal = {Behavioural Brain Research},
keywords = {Aging,Alzheimer's disease,Transcriptome},
pages = {311--328},
pmid = {27155503},
title = {{Transcriptional signatures of brain aging and Alzheimer's disease: What are our rodent models telling us?}},
