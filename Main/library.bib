issn = {17417007},
journal = {BMC Biology},
keywords = {Free cytoplasmic ribosomes,Genomic deletion model,Intron loss,Long interspersed element,Muridae,Processed pseudogene,Reverse transcription},
month = {mar},
number = {1},
pages = {1--12},
