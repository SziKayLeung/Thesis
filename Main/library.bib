month = {jan},
pages = {127--152},
pmid = {25172474},
publisher = {Academic Press},
title = {{Understanding complex transcriptome dynamics in schizophrenia and other neurological diseases using RNA sequencing}},
url = {https://www.sciencedirect.com/science/article/pii/B9780128011058000060?via{\%}3Dihub},
volume = {116},
year = {2014}
}
@article{Tombacz2016a,
