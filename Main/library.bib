file = {:C$\backslash$:/Users/sl693/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Niu et al. - 2010 - Artificial and natural duplicates in pyrosequencing reads of metagenomic data.pdf:pdf},
issn = {14712105},
journal = {BMC Bioinformatics},
month = {apr},
title = {{Artificial and natural duplicates in pyrosequencing reads of metagenomic data}},
